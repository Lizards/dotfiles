bar-load-indicator-font = 1
bar-load-fill = ‚îÄ
bar-load-fill-font = 2
bar-load-empty = ‚îÄ
bar-load-empty-font = 2
bar-load-empty-foreground = ${colors.slider-bar-bg}


;---------------------------------------
;	   NETWORK MODULES
;---------------------------------------
