;format-connected-underline = #9f78e1
label-connected = %signal%% at %essid%

format-disconnected = <label-disconnected>
label-disconnected = Ôá´
format-disconnected-underline = ${colors.highlight-warm}
label-disconnected-foreground = ${colors.highlight-warm}

ramp-signal-0 = üò±
ramp-signal-1 = Ôá´
;ramp-signal-foreground = ${colors.foreground-alt}

; Only applies if <animation-packetloss> is used
animation-packetloss-0 = ‚ö†
animation-packetloss-0-foreground = ${colors.highlight-warm}
animation-packetloss-1 = ‚ö†
animation-packetloss-1-foreground = ${colors.highlight-warm}
; Framerate in milliseconds
animation-packetloss-framerate = 500


[module/eth]
type = internal/network
interface = enp0s25
interval = 3.0

;format-connected-underline = #55aa55
format-connected-prefix = "ÔÉÅ "
;format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}


