#!/bin/sh

# Try external monitor resolution first
xrandr --output Virtual-1 --primary --mode 5120x2880 --pos 0x0 --rotate normal --output Virtual-2 --off --output Virtual-3 --off --output Virtual-4 --off --output Virtual-5 --off --output Virtual-6 --off --output Virtual-7 --off --output Virtual-8 --off

if [ $? -gt 0 ]; then
    xrandr --output Virtual-1 --primary --mode 3456x2160 --pos 0x0 --rotate normal --output Virtual-2 --off --output Virtual-3 --off --output Virtual-4 --off --output Virtual-5 --off --output Virtual-6 --off --output Virtual-7 --off --output Virtual-8 --off
fi